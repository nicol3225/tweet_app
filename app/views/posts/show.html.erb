<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content%>
      </p>
      <div class="posts-time">
        <%= @post.created_at%>
      </div>
      <div class="post-menus">
        <%= link_to("EDIT", "/posts/#{@post.id}/edit") %>
        <%= link_to("DELETE", "/posts/#{@post.id}/delete", {method: "post"}) %>
      </div>
    </div>
  </div>
</div>
